@model Quote

<h1>EditComment</h1>

@using (Html.BeginForm("EditComment", "Quote", "Post"))
{
    <label asp-for="id" class="control-label">id</label>
    <input type="number" step="1" name="id" class="form-control" />

    <label asp-for="comment" class="control-label">comment</label>
    <input type="text" name="comment" class="form-control" value="" />

    <input type="submit" value="Create Comment" class="btn btn-primary" />
}
